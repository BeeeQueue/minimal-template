{
  "name": "@beequeue/project-template",
  "version": "0.0.0",
  "author": "BeeeQueue <adam@haglund.dev>",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.0.0-beta.0",
  "engines": {
    "node": ">=18"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,json5,yaml,yml,css,scss,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint src",
    "test": "vitest",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@beequeue/eslint-plugin": "2.0.1",
    "@tsconfig/node18-strictest": "1.0.0",
    "@vitest/coverage-c8": "0.29.2",
    "dotenv": "16.0.3",
    "eslint": "8.35.0",
    "eslint-define-config": "1.15.0",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "simple-git-hooks": "2.8.1",
    "tsup": "6.6.3",
    "typescript": "4.9.5",
    "vite": "4.1.4",
    "vitest": "0.29.2"
  }
}
